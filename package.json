{
  "name": "bears-team-08",
  "version": "1.0.0",
  "description": "Mercado Livre Clone",
  "main": "index.js",
  "scripts": {
    "test": "mocha --exit",
    "start": "node ./index.js",
    "dev": "NODE_ENV=development && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:windows": "set NODE_ENV=development && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "server": "nodemon ./index.js",
    "server:install": "npm install",
    "client": "cd client && npm start",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "install:all": "concurrently --kill-others-on-fail  \"npm run server:install\" \"npm run client:install\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chingu-voyage7/Bears-Team-08.git"
  },
  "author": "Bears Team 08",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chingu-voyage7/Bears-Team-08/issues"
  },
  "homepage": "https://github.com/chingu-voyage7/Bears-Team-08#readme",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^6.1.0",
    "dotenv-flow": "^0.1.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.12",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "9.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "faker": "^4.1.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "mocha": "^5.2.0",
    "mock-require": "^3.0.2",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.2",
    "random-words": "^1.1.0",
    "rosie": "^2.0.1",
    "sinon": "^7.1.1",
    "validate-commit-msg": "^2.14.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "__tests__/**/*.{js.jsx}"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write --single-quote --no-semi",
      "eslint --fix",
      "git add"
    ]
  }
}
